#include <stdio.h>

int main() {
    // Define constants for the base and height of the triangle
    const float base = 5.0; // You can change these values as needed
    const float height = 6.0;

    // Calculate the area of the triangle
    float area = (base * height) / 2.0;

    // Calculate the hypotenuse of the triangle (using Pythagoras' theorem)
    float hypotenuse = sqrt(base * base + height * height);

    // Calculate the perimeter of the triangle
    float perimeter = base + height + hypotenuse;

    // Print the results
    printf("The area of the triangle is: %.2f\n", area);
    printf("The perimeter of the triangle is: %.2f\n", perimeter);

    return 0;
}
